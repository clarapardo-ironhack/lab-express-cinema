<div class="cinema-exp container">

    <h1>Ironhack Cinema</h1>
    <h6>Click on the movie to check the showtimes!</h6>


    <div class="row">
        {{#each movie}}
        <div class="col-md-3">
            <div class="card" style="width: 18rem;">
                <img src="{{image}}" class="card-img-top" alt="movie pic">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <a href="/movie/{{id}}">See more</a>
                </div>
            </div>

        </div>
        {{/each}}
    </div>
</div>